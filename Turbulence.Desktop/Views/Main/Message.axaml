<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Turbulence.Desktop.Views.Main.MessageView">
    <Grid ColumnDefinitions="Auto,*" Classes="Message">
        <Border CornerRadius="50" ClipToBounds="True" Width="40" Height="40" Margin="5 0 10 0">
            <Image Name="Image" UseLayoutRounding="False" />
        </Border>
        <StackPanel Grid.Column="1"
                    Orientation="Vertical"
                    Classes="MessageContent">
            <StackPanel Orientation="Horizontal">
                <TextBlock Name="Author" Classes="Author" />
                <TextBlock Name="Timestamp" Classes="Timestamp" />
            </StackPanel>
            <TextBlock Name="Content" Classes="MessageContent" />
        </StackPanel>
    </Grid>
</UserControl>
